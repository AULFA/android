<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style
    name="SimplifiedTheme"
    parent="android:Theme.Material.Light.DarkActionBar">
    <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
    <item name="android:colorPrimary">@color/feature_main_color</item>
    <item name="android:colorPrimaryDark">@color/feature_secondary_color</item>
    <item name="android:colorAccent">@color/feature_main_color</item>
    <item name="android:actionBarStyle">@style/ActionBar</item>
  </style>

  <style name="ActionBar" parent="@android:style/Widget.Material.Light.ActionBar.Solid">
    <item name="android:displayOptions">homeAsUp|showTitle</item>
    <item name="android:homeAsUpIndicator">@drawable/ic_menu</item>
  </style>

  <style
    name="SimplifiedThemeNoActionBar"
    parent="android:Theme.Material.Light.NoActionBar">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:colorPrimary">@color/feature_main_color</item>
    <item name="android:colorPrimaryDark">@color/feature_main_color</item>
    <item name="android:colorAccent">@color/feature_main_color</item>
  </style>

  <style name="SimplifiedTheme.LaneTitle">
    <item name="android:textSize">21sp</item>
    <item name="android:textColor">@color/feature_main_color</item>
    <item name="android:textStyle">normal</item>
    <item name="android:typeface">sans</item>
  </style>

  <style
    name="SimplifiedBookDialog"
    parent="SimplifiedTheme">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">false</item>
    <item name="android:windowIsFloating">true</item>
  </style>

  <style
    name="SimplifiedLoginDialog"
    parent="SimplifiedTheme">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">false</item>
    <item name="android:windowIsFloating">true</item>
  </style>

</resources>
