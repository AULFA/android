<?xml version="1.0" encoding="UTF-8"?>
<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.nypl.simplified</groupId>
    <artifactId>simplified</artifactId>
    <version>0.3.19</version>
  </parent>
  <artifactId>simplified-app</artifactId>

  <packaging>apk</packaging>
  <name>simplified-app</name>
  <description>Simplified (App frontend)</description>
  <url>https://github.com/NYPL/Simplified-Android</url>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>simplified-books-core</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>simplified-http-core</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>simplified-opds-core</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>simplified-stack</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>simplified-tenprint</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>org.nypl.drm</groupId>
      <artifactId>nypl-drm-core</artifactId>
    </dependency>

    <dependency>
      <groupId>com.io7m.jnull</groupId>
      <artifactId>io7m-jnull-core</artifactId>
    </dependency>

    <dependency>
      <groupId>android</groupId>
      <artifactId>android</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>android.support</groupId>
      <artifactId>compatibility-v13</artifactId>
    </dependency>

    <dependency>
      <groupId>org.readium</groupId>
      <artifactId>readium-sdk-android-runtime</artifactId>
    </dependency>
    <dependency>
      <groupId>org.readium</groupId>
      <artifactId>readium-shared-js</artifactId>
    </dependency>
    <dependency>
      <groupId>org.readium</groupId>
      <artifactId>libepub3</artifactId>
      <classifier>armeabi-v7a</classifier>
      <type>so</type>
    </dependency>
    <dependency>
      <groupId>com.koushikdutta.async</groupId>
      <artifactId>androidasync</artifactId>
    </dependency>
    <dependency>
      <groupId>com.squareup.picasso</groupId>
      <artifactId>picasso</artifactId>
    </dependency>
    <dependency>
      <groupId>com.nanohttpd</groupId>
      <artifactId>nanohttpd</artifactId>
    </dependency>

    <dependency>
      <groupId>com.github.tony19</groupId>
      <artifactId>logback-android-core</artifactId>
    </dependency>
    <dependency>
      <groupId>com.github.tony19</groupId>
      <artifactId>logback-android-classic</artifactId>
      <exclusions>
        <exclusion>
          <groupId>com.google.android</groupId>
          <artifactId>android</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>
  </dependencies>

  <profiles>
    <!-- The optional Adobe DRM profile. -->
    <profile>
      <id>nypl-drm-adobe</id>

      <dependencies>
        <dependency>
          <groupId>org.nypl.drm</groupId>
          <artifactId>nypl-drm-adobe</artifactId>
        </dependency>
        <dependency>
          <groupId>org.nypl.drm</groupId>
          <artifactId>libnypl_adobe</artifactId>
          <classifier>armeabi-v7a</classifier>
          <type>so</type>
        </dependency>
        <dependency>
          <groupId>org.nypl.drm</groupId>
          <artifactId>libnypl_adobe_filter</artifactId>
          <classifier>armeabi-v7a</classifier>
          <type>so</type>
        </dependency>
      </dependencies>

      <build>
        <plugins>
          <!-- If DRM is enabled, the certificate must exist. -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-enforcer-plugin</artifactId>
            <executions>
              <execution>
                <id>check-certificate</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>enforce</goal>
                </goals>
                <configuration>
                  <rules>
                    <requireFilesExist>
                      <files>
                        <file>src/main/assets/ReaderClientCert.sig</file>
                      </files>
                    </requireFilesExist>
                  </rules>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <build>
    <plugins>
      <!-- Check style -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
      </plugin>

      <!-- Android plugin configuration -->
      <plugin>
        <groupId>com.simpligility.maven.plugins</groupId>
        <artifactId>android-maven-plugin</artifactId>
        <configuration>
          <sdk>
            <platform>${org.nypl.android.sdkVersion}</platform>
          </sdk>
          <nativeLibrariesDirectory>libs</nativeLibrariesDirectory>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
