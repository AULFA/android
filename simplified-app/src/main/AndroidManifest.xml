<?xml version="1.0" encoding="utf-8"?>
<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  package="org.nypl.simplified.app"
  android:versionCode="39"
  android:versionName="0.3.8">

  <uses-sdk
    android:minSdkVersion="19"
    android:targetSdkVersion="21" />

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

  <application
    android:name="org.nypl.simplified.app.Simplified"
    android:allowBackup="true"
    android:icon="@drawable/simplified"
    android:label="@string/app_name"
    android:largeHeap="true"
    android:theme="@style/SimplifiedTheme">

    <!-- Catalog -->
    <activity
      android:name="org.nypl.simplified.app.catalog.CatalogFeedActivity"
      android:configChanges="orientation|screenSize"
      android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name="org.nypl.simplified.app.catalog.CatalogBookDetailActivity"
      android:exported="false">
    </activity>
    <activity
      android:name="org.nypl.simplified.app.catalog.BooksActivity"
      android:exported="false">
    </activity>
    <activity
      android:name="org.nypl.simplified.app.catalog.HoldsActivity"
      android:exported="false">
    </activity>
    <activity
      android:name="org.nypl.simplified.app.SettingsActivity"
      android:configChanges="orientation|screenSize"
      android:exported="false">
    </activity>

    <!-- Testing -->
    <activity
      android:name="org.nypl.simplified.app.testing.ThemeZooActivity"
      android:exported="true">
    </activity>
    <activity
      android:name="org.nypl.simplified.app.testing.CoverGeneration"
      android:exported="true">
    </activity>
    <activity
      android:name="org.nypl.simplified.app.testing.DrawTest"
      android:exported="true">
    </activity>
    <activity
      android:name="org.nypl.simplified.app.testing.LoginTest"
      android:exported="true">
    </activity>

    <!-- Reader -->
    <activity
      android:name="org.nypl.simplified.app.reader.ReaderActivity"
      android:exported="true"
      android:configChanges="orientation|screenSize"
      android:theme="@style/SimplifiedThemeNoActionBar"
      android:process=".ReaderActivityProcess">
    </activity>
    <activity
      android:name="org.nypl.simplified.app.reader.ReaderTOCActivity"
      android:exported="false"
      android:theme="@style/SimplifiedThemeNoActionBar"
      android:configChanges="orientation|screenSize"
      android:process=".ReaderActivityProcess">
    </activity>
    <activity
      android:name="org.nypl.simplified.app.reader.ReaderTestActivity"
      android:exported="true"
      android:configChanges="orientation|screenSize"
      android:process=".ReaderActivityProcess">
    </activity>
  </application>

</manifest>
