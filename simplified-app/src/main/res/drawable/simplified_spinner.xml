<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <padding
        android:left="@dimen/spinner_padding_left"
        android:top="@dimen/spinner_padding_top"
        android:right="@dimen/spinner_padding_right"
        android:bottom="@dimen/spinner_padding_bottom" />
      <corners android:radius="@dimen/spinner_corner_radius" />
      <solid android:color="@color/spinner_foreground" />
      <stroke
        android:width="@dimen/spinner_stroke"
        android:color="@color/spinner_background" />
    </shape>
  </item>

  <item android:state_focused="true">
    <shape android:shape="rectangle">
      <padding
        android:left="@dimen/spinner_padding_left"
        android:top="@dimen/spinner_padding_top"
        android:right="@dimen/spinner_padding_right"
        android:bottom="@dimen/spinner_padding_bottom" />
      <corners android:radius="@dimen/spinner_corner_radius" />
      <solid android:color="@color/spinner_background" />
      <stroke
        android:width="@dimen/spinner_stroke"
        android:color="@color/spinner_foreground" />
    </shape>
  </item>

  <item>
    <shape android:shape="rectangle">
      <padding
        android:left="@dimen/spinner_padding_left"
        android:top="@dimen/spinner_padding_top"
        android:right="@dimen/spinner_padding_right"
        android:bottom="@dimen/spinner_padding_bottom" />
      <corners android:radius="@dimen/spinner_corner_radius" />
      <solid android:color="@color/spinner_background" />
      <stroke
        android:width="@dimen/spinner_stroke"
        android:color="@color/spinner_foreground" />
    </shape>
  </item>

</selector>