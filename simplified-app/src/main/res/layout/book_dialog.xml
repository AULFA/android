<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/book_dialog"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/normal_background"
  android:orientation="vertical">

  <LinearLayout
    android:id="@+id/book_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:minHeight="160dp"
    android:orientation="horizontal">

    <!-- The width of this layout is set at run-time based on the size of the book 
      cover -->

    <LinearLayout
      android:id="@+id/book_header_left"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/book_header_cover"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:scaleType="fitCenter"
        android:src="@drawable/empty" />
    </LinearLayout>

    <RelativeLayout
      android:id="@+id/book_header_right"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/book_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Book"
        android:textColor="@color/normal_text_major"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/book_header_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_header_title"
        android:layout_marginStart="8dp"
        android:text="Book subtitle"
        android:textColor="@color/normal_text_major" />

      <TextView
        android:id="@+id/book_header_authors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_header_subtitle"
        android:layout_marginStart="8dp"
        android:inputType="textMultiLine|textNoSuggestions"
        android:maxLines="8"
        android:minLines="1"
        android:text="Authors"
        android:textColor="@color/normal_text_major" />

      <TextView
        android:id="@+id/book_header_meta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_header_authors"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:inputType="textMultiLine|textNoSuggestions"
        android:maxLines="8"
        android:minLines="1"
        android:text="Meta"
        android:textColor="@color/normal_text_minor" />
    </RelativeLayout>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/book_hold_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:padding="16dp"
    android:background="@color/notification_background"
    android:orientation="vertical">

    <TextView
      android:id="@+id/book_hold_notification_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="This hold will be automatically cancelled in 1 hour"
      android:textColor="@color/notification_foreground" />
  </LinearLayout>

  <RelativeLayout
    android:id="@+id/book_downloading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:padding="16dp"
    android:background="@color/downloading_background"
    android:orientation="vertical">

    <LinearLayout
      android:id="@+id/book_downloading_inner"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:gravity="center_vertical"
      android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/downloading_foreground"
        android:text="@string/catalog_downloading"
        android:textSize="10sp" />

      <ProgressBar
        android:id="@+id/book_downloading_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_weight="10"
        android:progress="50"
        android:progressDrawable="@drawable/simplified_progress_inverse" />

      <TextView
        android:id="@+id/book_downloading_percent_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingLeft="16dp"
        android:text="0%"
        android:textColor="@color/downloading_foreground"
        android:textAlignment="gravity"
        android:textSize="10sp" />
    </LinearLayout>

    <Button
      android:id="@+id/book_downloading_cancel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/book_downloading_inner"
      android:background="@drawable/simplified_button"
      android:textColor="@drawable/simplified_button_text"
      android:layout_centerHorizontal="true"
      android:text="@string/catalog_cancel_downloading"
      android:textSize="10sp" />
  </RelativeLayout>

  <LinearLayout
    android:id="@+id/book_buttons"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:gravity="center"
    android:orientation="horizontal">
  </LinearLayout>

  <LinearLayout
    android:id="@+id/book_summary_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:orientation="vertical">

    <View
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_marginBottom="8dp"
      android:background="@android:color/darker_gray" />

    <TextView
      android:id="@+id/book_summary_publisher"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:text="Book publisher"
      android:textColor="@color/normal_text_major" />

    <WebView
      android:id="@+id/book_summary_text"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:layout_marginBottom="16dp">
    </WebView>

    <View
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_marginTop="16dp"
      android:background="@android:color/darker_gray" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/book_related_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:orientation="vertical">

    <TextView
      android:id="@+id/book_related_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:text="@string/catalog_detail_related"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:textColor="@color/normal_text_major" />
  </LinearLayout>

</LinearLayout>