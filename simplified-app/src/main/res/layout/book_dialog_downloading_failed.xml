<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/book_downloading_failed"
  android:layout_margin="16dp"
  android:layout_width="match_parent"
  android:layout_height="110dp">

  <TextView
    android:id="@+id/book_downloading_failed_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:text="@string/catalog_download_failed"
    android:textColor="@color/normal_text_major"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/book_downloading_failed_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/book_downloading_failed_title"
    android:textColor="@color/normal_text_major"
    android:text="Text"
    android:textSize="10sp" />

  <Button
    android:id="@+id/book_downloading_failed_dismiss"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:background="@drawable/simplified_button"
    android:textColor="@drawable/simplified_button_text"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:textSize="12sp"
    android:text="@string/catalog_book_error_dismiss" />

</RelativeLayout>