<?xml version="1.0" encoding="UTF-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <!-- The cell contents shown when a book is not downloading -->

  <LinearLayout
    android:id="@+id/cell_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- The actual width of this layout is set at run-time based on the book cover -->

    <FrameLayout
      android:id="@+id/cell_cover_layout"
      android:layout_width="wrap_content"
      android:layout_height="110dp"
      android:layout_gravity="center">

      <ProgressBar
        android:id="@+id/cell_cover_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

      <ImageView
        android:id="@+id/cell_cover_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </FrameLayout>

    <RelativeLayout
      android:id="@+id/cell_text_layout"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:paddingLeft="8dp"
      android:paddingTop="8dp">

      <TextView
        android:id="@+id/cell_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textStyle="bold"/>

      <TextView
        android:id="@+id/cell_authors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cell_title"
        android:text="Authors"/>

      <LinearLayout
        android:id="@+id/cell_buttons"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"/>
    </RelativeLayout>
  </LinearLayout>

  <!-- The cell contents shown when a book is downloading -->

  <LinearLayout
    android:id="@+id/cell_downloading"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
      android:id="@+id/cell_downloading_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Title"
      android:textStyle="bold"/>

    <TextView
      android:id="@+id/cell_downloading_authors"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingBottom="16dp"
      android:text="Authors"
      android:textSize="10sp"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/catalog_downloading"
        android:textSize="10sp"/>

      <ProgressBar
        android:id="@+id/cell_downloading_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"/>

      <TextView
        android:id="@+id/cell_downloading_percent_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingLeft="16dp"
        android:text="0%"
        android:textAlignment="gravity"
        android:textSize="10sp"/>
    </LinearLayout>

    <Button
      android:id="@+id/cell_downloading_cancel"
      style="?android:attr/buttonStyleSmall"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="@string/catalog_cancel_downloading"
      android:textSize="10sp"/>
  </LinearLayout>

</merge>