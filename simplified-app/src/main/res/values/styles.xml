<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style
    name="SimplifiedTheme"
    parent="android:Theme.Holo.Light">
    <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
    <item name="android:spinnerStyle">@style/SimplifiedSpinner</item>
    <item name="android:spinnerItemStyle">@style/SimplifiedSpinnerItem</item>
    <item name="android:spinnerDropDownItemStyle">@style/SimplifiedSpinnerDropDownItem</item>
  </style>

  <style
    name="SimplifiedThemeNoActionBar"
    parent="android:Theme.Holo.Light.NoActionBar">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="SimplifiedTheme.LaneTitle">
    <item name="android:textSize">21sp</item>
    <item name="android:textColor">@color/main_color</item>
    <item name="android:textStyle">normal</item>
    <item name="android:typeface">sans</item>
  </style>

  <style
    name="SimplifiedSpinner"
    parent="@android:style/Widget.Spinner">
    <item name="android:popupBackground">@drawable/simplified_popup</item>
    <item name="android:background">@drawable/simplified_spinner</item>
  </style>

  <style
    name="SimplifiedSpinnerItem"
    parent="@android:style/Widget.TextView.SpinnerItem">
    <item name="android:textColor">@drawable/simplified_spinner_text</item>
    <item name="android:background">@drawable/simplified_spinner_item</item>
  </style>

  <style name="SimplifiedSpinnerDropDownItem">
    <item name="android:textColor">@drawable/simplified_spinner_drop_item_text</item>
    <item name="android:textSize">12sp</item>
    <item name="android:background">@drawable/simplified_spinner_drop_item</item>
  </style>

  <style
    name="SimplifiedBookDialog"
    parent="SimplifiedTheme">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">false</item>
    <item name="android:windowIsFloating">true</item>
  </style>

  <style
    name="SimplifiedLoginDialog"
    parent="SimplifiedTheme">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">false</item>
    <item name="android:windowIsFloating">true</item>
  </style>

</resources>